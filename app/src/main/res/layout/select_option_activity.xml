<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@drawable/splas_red_social">

    <Button
        android:id="@+id/btn_user_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758"
        android:layout_marginStart="@dimen/d40dp"
        android:layout_marginEnd="@dimen/d40dp"
        android:textSize="@dimen/d20sp"
        android:textColor="@drawable/text_color_change_effect"
        android:background="@drawable/rounder_with_transparent_button"/>

    <Button
        android:id="@+id/btn_sign_up_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_user_login_main"
        app:layout_constraintVertical_bias="0.189"
        android:layout_marginStart="@dimen/d40dp"
        android:layout_marginEnd="@dimen/d40dp"
        android:textSize="@dimen/d20sp"
        android:textColor="@drawable/text_color_change_effect"
        android:background="@drawable/rounder_with_transparent_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>